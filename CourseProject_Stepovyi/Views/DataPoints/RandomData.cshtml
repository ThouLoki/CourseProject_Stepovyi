@model CourseProject_Stepovyi.ViewModels.RandomDataViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RandomData</title>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h2>How many dots to generate?</h2>
    <form method="post">
        <label>Amount of dots</label><br />
        <input asp-for="DotsCount" value="" class="input-sm" style="font-size:120%" /><br />
        <span asp-validation-for="DotsCount" name="interr" class="text-danger">@TempData["data"]</span><br />
        <label style="margin-left:150px">First point of generation</label><br />
        <div style="display:flex; flex-direction:row;">
            <div>
                <label>x axis</label><br />
                <input asp-for="x_start_point" value="0.1" class="input-sm" style="font-size:120%" /><br />
                <span asp-validation-for="x_start_point" class="text-danger"></span><br />
                <label style="margin-left:100px">Generate random addition to coordinates</label><br />
                <label>From</label><br />
                <input asp-for="from" value="0" class="input-sm" style="font-size:120%" /><br />
                <span asp-validation-for="from" class="text-danger"></span><br />
            </div>
            <div style="margin-left:-100px; margin-top:2px">
                <label>y axis</label><br />
                <input asp-for="y_start_point" value="0.1" class="input-sm" style="font-size:120%" /><br />
                <span asp-validation-for="y_start_point" class="text-danger"></span><br /><br />
                <div style=" margin-top:4px">
                    <label>To</label><br />
                    <input asp-for="to" value="6" class="input-sm" style="font-size:120%" /><br />
                    <span asp-validation-for="to" class="text-danger"></span><br />
                </div>
            </div>
        </div>
        <div style="margin-top:12px;">
            <input type="submit" value="Submit" class="btn btn-default" style="margin-top:0px;" />
            <a asp-action="Index" style="margin-left:50px; margin-top:50px; position:relative;">Or input your data by hand...</a>
        </div>

    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

