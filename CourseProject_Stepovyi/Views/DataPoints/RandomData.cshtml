@model CourseProject_Stepovyi.ViewModels.RandomDataViewModel
@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RandomData</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h2>How many dots to generate?</h2>
    <form method="post">
        @*<input name="messg" /><br />*@
        <input asp-for="DotsCount" class="input-sm" style="font-size:120%"/><br />
        <span asp-validation-for="DotsCount" class="text-danger"></span>
        <div style="margin-top:12px;">
            <input type="submit" value="Submit" class="btn btn-default" style="margin-top:0px;" />
            <a asp-action="Index" style="margin-left:50px; margin-top:50px; position:relative;">Or input your data by hand...</a>
        </div>
        
    </form>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

